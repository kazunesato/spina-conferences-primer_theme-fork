= render(Primer::HeadingComponent.new) { t '.log_in' }

= form_for(resource, as: resource_name, url: frontend_public_user_session_path(resource)) do |f|
  = render "spina/conferences/primer_theme/accounts/public_users/shared/error_messages", resource: resource
  .form-group
    .form-group-header
      = f.label :email
    .form-group-body
      = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control'
  .form-group
    .form-group-header
      = f.label :password
    .form-group-body
      = f.password_field :password, autocomplete: 'current-password', class: 'form-control'
  - if devise_mapping.rememberable?
    .form-checkbox
      = f.check_box :remember_me
      = f.label :remember_me
  = f.submit 'Log in', class: 'btn btn-primary'
= render "spina/conferences/primer_theme/accounts/public_users/shared/links"
